{
  "name": "nodejs-wayland-server",
  "version": "1.0.0",
  "description": "nodejs wrapper for a nested wayland server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "configure": "bash ./configure_meson.sh",
    "build": "meson install -C $(pwd)/builddir",
    "postinstall": "npm run configure && npm run build && node copy-artifacts.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-ld/nodejs-wayland-server.git"
  },
  "keywords": [
    "nodejs",
    "wayland"
  ],
  "author": "andrew-ld",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/andrew-ld/nodejs-wayland-server/issues"
  },
  "homepage": "https://github.com/andrew-ld/nodejs-wayland-server#readme",
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-api-headers": "^1.5.0"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "artifacts/nodejs_wayland.d.ts",
    "copy-artifacts.js",
    "index.js",
    "meson.build",
    "meson_options.txt",
    "src/wrapper.cpp",
    "subprojects/weston-fork.wrap",
    "configure_meson.sh"
  ]
}
