{
  "name": "nodejs-wayland-server",
  "version": "1.0.0",
  "description": "nodejs wrapper for a nested wayland server",
  "main": "index.js",
  "type": "commonjs",
  "types": "./index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "configure": "bash ./meson-configure.sh",
    "build": "bash ./meson-build.sh",
    "clean": "bash ./meson-cleanup.sh",
    "postinstall": "npm run configure && npm run build && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-ld/nodejs-wayland-server.git"
  },
  "keywords": [
    "nodejs",
    "wayland"
  ],
  "author": "andrew-ld",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/andrew-ld/nodejs-wayland-server/issues"
  },
  "homepage": "https://github.com/andrew-ld/nodejs-wayland-server#readme",
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-api-headers": "^1.5.0"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "LICENSE",
    "index.js",
    "src/*.cpp",
    "artifacts/*.so",
    "artifacts/*.node",
    "artifacts/*.ts",
    "meson.build",
    "meson_options.txt",
    "meson-*.sh",
    "subprojects/weston-fork.wrap",
    "index.d.ts"
  ]
}