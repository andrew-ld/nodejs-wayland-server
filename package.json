{
  "name": "nodejs-wayland-server",
  "version": "1.0.0",
  "description": "nodejs wrapper for a nested wayland server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "configure": "meson setup builddir --reconfigure --prefix=$(pwd)/builddir/install",
    "build": "meson install -C builddir",
    "install": "npm run configure && npm run build && node copy-artifacts.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-ld/nodejs-wayland-server.git"
  },
  "keywords": [
    "nodejs",
    "wayland"
  ],
  "author": "andrew-ld",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/andrew-ld/nodejs-wayland-server/issues"
  },
  "homepage": "https://github.com/andrew-ld/nodejs-wayland-server#readme",
  "devDependencies": {
    "node-gyp": "^11.3.0"
  },
  "files": [
    "index.js",
    "artifacts/*.node",
    "artifacts/*.so"
  ],
  "dependencies": {
    "node-addon-api": "^8.5.0"
  }
}